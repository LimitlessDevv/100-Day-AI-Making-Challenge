/* Modern, responsive, accessible styles for Task Manager */
:root {
  --primary: #4f8cff;
  --background: #f7f9fb;
  --surface: #fff;
  --text: #222;
  --completed: #b0b0b0;
  --danger: #ff4f4f;
}
* { box-sizing: border-box; }
body {
  margin: 0;
  font-family: 'Segoe UI', Arial, sans-serif;
  background: var(--background);
  color: var(--text);
}
.container {
  max-width: 400px;
  margin: 3rem auto;
  background: var(--surface);
  border-radius: 12px;
  box-shadow: 0 2px 16px rgba(0,0,0,0.07);
  padding: 2rem 1.5rem 1.5rem 1.5rem;
}
h1 {
  text-align: center;
  margin-bottom: 1.5rem;
}
#task-form {
  display: flex;
  gap: 0.5rem;
  margin-bottom: 1.5rem;
}
#task-input {
  flex: 1;
  padding: 0.75rem;
  border: 1px solid #ddd;
  border-radius: 6px;
  font-size: 1rem;
}
#task-form button {
  background: var(--primary);
  color: #fff;
  border: none;
  border-radius: 6px;
  padding: 0 1.2rem;
  font-size: 1rem;
  cursor: pointer;
  transition: background 0.2s;
}
#task-form button:hover, #task-form button:focus {
  background: #2563eb;
}
#task-list {
  list-style: none;
  padding: 0;
  margin: 0;
}
.task-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0.75rem 0.5rem;
  border-bottom: 1px solid #eee;
  transition: background 0.2s;
}
.task-item:last-child {
  border-bottom: none;
}
.task-label {
  flex: 1;
  cursor: pointer;
  outline: none;
  transition: color 0.2s;
}
.task-label.completed {
  text-decoration: line-through;
  color: var(--completed);
}
.task-actions {
  display: flex;
  gap: 0.5rem;
}
.delete-btn {
  background: none;
  border: none;
  color: var(--danger);
  font-size: 1.2rem;
  cursor: pointer;
  padding: 0.2rem 0.5rem;
  border-radius: 4px;
  transition: background 0.2s;
}
.delete-btn:hover, .delete-btn:focus {
  background: #ffeaea;
}
.visually-hidden {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0,0,0,0);
  border: 0;
}
@media (max-width: 500px) {
  .container {
    max-width: 98vw;
    padding: 1rem 0.5rem 1rem 0.5rem;
  }
  #task-input {
    font-size: 0.95rem;
  }
}
